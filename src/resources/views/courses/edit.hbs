<div class='container mt-4'>
    <h3>Sửa khoá học</h3>
    <form method='POST' action='/courses/{{course._id}}?_method=PUT'>
        <div class='form-group'>
            <label for='name'>Tên khoá học</label>
            <input style='width: 500px;' type='text' value='{{course.name}}' id='name' name='name' />

        </div>

        <div class='form-group'>
            <label for='description'>Mô tả</label>
            <textarea style='width: 500px;' id='description' name='description'>{{course.description}}</textarea>
        </div>
        <div class='form-group'>
            <label for='videoID'>VideoID</label>
            <input style='width: 500px;' type='text' value='{{course.videoID}}' id='videoID' name='videoID' />

        </div>
        <button type='submit' class='btn btn-primary'>Lưu lại</button>
    </form>
</div>