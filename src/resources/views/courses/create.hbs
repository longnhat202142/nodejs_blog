<div class='mt-4'>
    <h3>Đăng khoá học</h3>
    <form method='POST' action='/courses/store'>
        <div class='form-group'>
            <label for='name'>Tên khoá học</label>
            <input type='text' id='name' name='name' />

        </div>

        <div class='form-group'>
            <label for='description'>Mô tả</label>
            <input type='text' id='description' name='description' />

        </div>
        <div class='form-group'>
            <label for='videoID'>VideoID</label>
            <input type='text' id='videoID' name='videoID' />

        </div>
        <button type='submit' class='btn btn-primary'>Thêm khoá học</button>
    </form>
</div>